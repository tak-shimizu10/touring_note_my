<%= render 'templates/form_header' %>

<div class="wrapper">
  <section class="contents_top">
    <div class="form_container form_container_half">
      <div class="form_container__head">
        <h2>ログイン</h2>
      </div>
      <div class="form_container__form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, "Eメール" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-default" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "input-default" %>
          </div>

          <div class="actions">
            <%= f.submit "ログインする" %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>

<%= render 'templates/footer' %>